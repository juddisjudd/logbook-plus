{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "logbook-overlay",
  "version": "0.1.2",
  "identifier": "com.juddisjudd.logbook-overlay",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Logbook+",
        "width": 700,
        "height": 600,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://releases.githubusercontent.com/repos/juddisjudd/logbook-overlay/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": ""
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/512x512.png",
      "icons/icon.ico"
    ]
  }
}
