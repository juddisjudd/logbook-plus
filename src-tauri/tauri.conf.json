{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "logbook-plus",
  "version": "1.0.11",
  "identifier": "com.juddisjudd.logbook-plus",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Logbook+",
        "width": 700,
        "height": 600,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/juddisjudd/logbook-plus/releases/latest/download/latest.json"
      ],
      "dialog": true
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "../src/assets/32x32.png",
      "../src/assets/128x128.png",
      "../src/assets/128x128@2x.png",
      "../src/assets/512x512.png",
      "../src/assets/icon.ico"
    ]
  }
}
